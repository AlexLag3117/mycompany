MODULE CategoryLot;

REQUIRE Category, Lot;

NAMESPACE MasterData;

//category
dataUseLot 'Необходимость парционного учета' = DATA BOOLEAN (Category);
useLot (Category c) = useLot() AND OVERRIDE dataUseLot(c), GROUP LAST dataUseLot(Category cp) ORDER level(c, cp);

EXTEND FORM category
    PROPERTIES (c) dataUseLot SHOWIF useLot();
    
DESIGN category {
    params {
        MOVE PROPERTY(dataUseLot(c));
    }
} 